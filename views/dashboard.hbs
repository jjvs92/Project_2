<!DOCTYPE html>
<html>
<head>
	<title>Passport with Sequelize</title>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
<div class="row">
  <div class="col-12 games"></div>
</div>
<script>


  // THis here is console logging  the ID of the user that is signed in... when wanting to reference the user we can use {{userid}}--- this is becuase it was passed in authcontroller.js
  function showUserID(){
    console.log({{userid}});
  }
  showUserID();

  //-------------------------------------------------


	var showAction = function() {
  var homeTeams = [];
  var awayTeams = [];
  $(".loginPrompt").empty();
  $.ajax({
    url: "https://cors-everywhere.herokuapp.com/http://api.sportradar.us/mlb/trial/v6.5/en/games/2018/07/02/schedule.json?api_key=v9sa2vk6h75y3kmyj32mudj8",
    type: "GET",
    success: function(data) {
      console.log(data);
      console.log(data.games.length);
      for (var i = 0; i < data.games.length; i++) {
        var gameNum = [i + 1];
        var awayTeam = data.games[i].away.name;
        var homeTeam = data.games[i].home.name;

        homeTeams.push(homeTeam);
        awayTeams.push(awayTeam);
        var createDiv = $("<div style='text-align: center;'></div>");
        createDiv.append("<h1>Game " + gameNum + "</h1><br>" + "<p>HOME TEAM: " + homeTeam + "</p>" + "<p> vs </p>" + "<p>AWAY TEAM: " + awayTeam + "</p><hr>");
        $(".games").append(createDiv);
      }
    }
  });
};
showAction();
</script>
</body>
</html>